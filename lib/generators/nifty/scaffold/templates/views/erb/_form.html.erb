<%%= form_for <%= item_path :instance_variable => true %>, :html => { :class => "form-horizontal" } do |f| %>

  <%%= render "shared/error_messages", :target => @<%= instance_name %> %>

<%- for attribute in model_attributes -%>
  <div class="control-group">
    <label class="control-label">라벨 명</label>
    <div class="controls">
      <label><%%= f.<%= attribute.field_type %> :<%= attribute.name %> %></label>
    </div>
  </div>

<%- end -%>

  <div class="form-actions">
    <%%= f.submit (@<%= instance_name %>.new_record?? '등록' : '수정' ), :class => "btn btn-primary" %>
    <%%= link_to "취소", items_path, :class => "btn" %>
  </div>
<%% end %>
